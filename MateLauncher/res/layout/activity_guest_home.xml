<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mobi.intuitit.android.homepage.GuestHome" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:orientation="vertical" >   

        <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:background="#f0000000" >

      	      <ImageView 
                android:id="@+id/guest_profile" 
    		    android:layout_width="60dp"
	       		android:layout_height="60dp"
                android:layout_alignParentLeft="true" 
                android:layout_alignParentTop="true" 
                android:layout_margin="1dp"                
                android:background="#ffffffff"/>
            </LinearLayout>

        <TextView
            android:id="@+id/guest_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="30sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0000000" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#ffffffff" >

            <Gallery
                android:id="@+id/gallery_guest"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:animationDuration="1500"
                android:gravity="center_vertical"
                android:spacing="5dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0000000" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"            
            android:background="#ffffffff" >

            <TextView
                android:id="@+id/guest_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="추천 : " />
            <!-- 

            <TextView
                android:id="@+id/recommendValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="00" />
                
                 -->

            <TextView
                android:id="@+id/guest_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="다운 : " />            

            <TextView
                android:id="@+id/guest_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="방문 : " />

            

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0000000" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#ffffffff" >

            <ImageView
                android:id="@+id/btnRecommend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/thumbsup"
                android:text="추천하기" />

            <ImageView
                android:id="@+id/btnDown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/download"
                android:text="다운하기" />

            <ImageView
                android:id="@+id/btnWirte"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/write"
                android:text="글쓰기" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f0000000" >

        <ListView
            android:id="@+id/guest_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffffff" >
        </ListView>

    </LinearLayout>

</LinearLayout>