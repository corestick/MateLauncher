<?xml version="1.0" encoding="utf-8"?>
<mobi.intuitit.android.mate.launcher.MobjectImageView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WorkspaceIcon.Portrait" >

    <LinearLayout
        android:id="@+id/layoutAvatarMenu"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:orientation="horizontal"  >
        
        
        <ImageView 
            android:id="@+id/imgCall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ico_call"
            />
        
       	<ImageView
            android:id="@+id/imgSMS"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ico_sms"
            />
       	<ImageView
            android:id="@+id/imgTwitter"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ico_twitter"
            />
       	<ImageView
            android:id="@+id/imgFacebook"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ico_facebook"
            />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layoutSpeechBubble"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:background="@drawable/speechbubble"
        android:orientation="vertical"  >

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0sp"
            android:layout_height="0sp" >

            <TextView
                android:id="@+id/txtSpeechBubble"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgMobject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</mobi.intuitit.android.mate.launcher.MobjectImageView>